<%= form_for [:admin, @driver] do |form| %>

  <% if driver.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(driver.errors.count, "error") %> prohibited this driver from being saved:</h2>

      <ul>
      <% driver.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :contact_1 %>
    <%= form.text_field :contact_1 , class: "form-control rounded-0"%>
  </div>

  <div class="form-group">
    <%= form.label :conatct_2 %>
    <%= form.text_field :conatct_2, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :state %>
    <%= form.text_field :state, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :country %>
    <%= form.text_field :country, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :id_proof %>
    <%= form.text_field :id_proof, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :additional_id %>
    <%= form.text_field :additional_id, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :profile_image %>
    <%= form.file_field :profile_image, class: "form-control rounded-0" %>
  </div>

  <div class="actions">
    <%= form.submit %>
    <%= link_to 'Cancel', admin_drivers_path, class: "btn btn-outline-secondary rounded-0" %>
  </div>
<% end %>

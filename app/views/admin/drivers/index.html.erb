<div class="breadcrumb-holder">
  <div class="container-fluid">
    <ul class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to 'Admin', admin_dashboard_path %></li>
      <li class="breadcrumb-item active">Driver</li>
    </ul>
  </div>
</div>
<div class="form mt-5">
  <div class="container-fluid">
    
  
    <div class="card">
      <% if notice.present? %>
        <div class="alert alert-success mt-5 alert-dismissible">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= notice %>
        </div>
      <% end %>
      <div class="card-header">
        <h1>Drivers</h1>    
      </div>
      <div class="card-body">    
        <div class="table-responsive">
          
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Full name</th>
                <th>Contact 1</th>
                <th>Contact 2</th>
                <th>City</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @drivers.each do |driver| %>
              <tr>
                <td><%= driver.full_name %></td>
                <td><%= driver.contact_1 %></td>
                <td><%= driver.contact_2 %></td>
                <td><%= driver.city %></td>
                <td>
                  <div class="dropdown">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Actions</button>
                    <div class="dropdown-menu">                                   
                     <%= link_to 'Show', admin_driver_path(driver), class: "dropdown-item" %>
                     <%= link_to 'Edit', edit_admin_driver_path(driver), class: "dropdown-item" %>
                     <%= link_to 'Destroy', admin_driver_path(driver), method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
                    </div>  
                  </div>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <br>
          <%= link_to 'New Driver', new_admin_driver_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

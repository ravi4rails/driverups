<p id="notice"><%= notice %></p>

<h1>Drivers</h1>
<div class="table-responsive">
  
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Full name</th>
        <th>Contact 1</th>
        <th>Contact 2</th>
        <th>City</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.full_name %></td>
        <td><%= driver.contact_1 %></td>
        <td><%= driver.contact_2 %></td>
        <td><%= driver.city %></td>
        <td><%= link_to 'Show', admin_driver_path(driver), class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Edit', edit_admin_driver_path(driver), class: "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Destroy', admin_driver_path(driver), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Driver', new_admin_driver_path, class: "btn btn-primary" %>
</div>

<div class="breadcrumb-holder">
  <div class="container-fluid">
    <ul class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to 'Users', admin_users_path %></li>
      <li class="breadcrumb-item active"><%= @user.email %></li>
    </ul>
  </div>
</div>
<div class="contanier">
  <div class="card mt-3 ml-3">
    <div class="card-body"> 
      <p>
        <strong> Name:</strong>
        <%= @user.first_name %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>

      <p>
        <strong>Contact:</strong>
        <%= @user.contact_number %>
      </p>

      <%= link_to 'Edit', edit_admin_user_path(@user), class: "btn btn-secondary rounded-0" %> |
      <%= link_to 'Back', admin_users_path, class: "btn btn-primary rounded-0" %>
    </div>
  </div>
</div>
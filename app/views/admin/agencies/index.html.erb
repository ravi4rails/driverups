<h1>Agencies</h1>
<div class="table-responsive">  
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Cover image</th>
        <th>Logo</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @agencies.each do |agency| %>
        <tr>
          <td><%= agency.name %></td>
          <td><%= agency.cover_image %></td>
          <td><%= agency.logo %></td>
          <td><%= link_to 'Show', admin_agency_path(agency), class: "btn btn-success btn-sm" %></td>
          <td><%= link_to 'Edit', edit_admin_agency_path(agency), class: "btn btn-secondary btn-sm" %></td>
          <td><%= link_to 'Destroy',admin_agency_path(agency), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 

<br>

<%= link_to 'New Agency', new_admin_agency_path, class: "btn btn-primary btn-sm" %>

<div class="breadcrumb-holder">
  <div class="container-fluid">
    <ul class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to 'Admin', admin_dashboard_path %></li>
      <li class="breadcrumb-item active">Agency</li>
    </ul>
  </div>
</div>
<div class="container-fluid">
  <div class="card mt-3">
    <div class="card-body">
      <%= render 'admin/agencies/index/filter' %>      
    </div>
  </div>
  <div class="card mt-3">
    <% if notice.present? %>
      <div class="alert alert-success mt-5 alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= notice %>
      </div>
    <% end %>
    <div class="container-fluid">  
      <div class="card-header">
        <h1>Agencies</h1>    
      </div>
      <div class="card-body">    
        <div class="table-responsive">  
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Name</th>
                <th>Cover image</th>
                <th>Logo</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @agencies.each do |agency| %>
                <tr>
                  <td><%= agency.name %></td>
                  <td><%= agency.cover_image %></td>
                  <td><%= agency.logo %></td>
                  <td><%= agency.base_fare %></td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Actions</button>
                      <div class="dropdown-menu">                                   
                       <%= link_to 'Show', admin_agency_path(agency), class: "dropdown-item" %>
                       <%= link_to 'Edit', edit_admin_agency_path(agency), class: "dropdown-item" %>
                       <%= link_to 'Destroy',admin_agency_path(agency), method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
                      </div>  
                    </div>
                </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div> 
        <br>
        <%= link_to 'New Agency', new_admin_agency_path, class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
</div>
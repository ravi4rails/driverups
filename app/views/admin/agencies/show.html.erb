<div class="contanier">
  <div class="card">
    <div class="card-body"> 
      <p>
        <strong>Name:</strong>
        <%= @agency.name %>
      </p>

      <p>
        <strong>Cover image:</strong>
        <%= image_tag @agency.cover_image_url, class: "rounded-circle",  style: "width:150px;height:100px;" %>
      </p>

      <p>
        <strong>Logo:</strong>
        <%= image_tag @agency.logo_url, class: "rounded-circle", style: "width:150px;height:100px;" %>
      </p>

      <%= link_to 'Edit', edit_admin_agency_path(@agency), class: "btn btn-secondary btn-sm" %> |
      <%= link_to 'Back', admin_agencies_path, class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>
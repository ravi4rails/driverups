<%= form_with(model: agency, local: true, html: {id: 'agency_form'}) do |form| %>
  <% if agency.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(agency.errors.count, "error") %> prohibited this agency from being saved:</h2>

      <ul>
      <% agency.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :user_id, value: current_user.id%>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :base_fare %>
    <%= form.text_field :base_fare, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :cover_image %>
    <%= form.file_field :cover_image, id: :agency_cover_image, placeholder: "Cover_image", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :logo %>
    <%= form.file_field :logo, id: :agency_logo, placeholder: "Cover_image", required: true %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-info btn-sm"%>
  </div>
<% end %>

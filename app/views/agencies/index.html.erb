<div class="card mt-3">
  <div class="card-header">
    <h1>Agencies</h1>      
  </div>
  <div class="table-responsive">    
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Cover image</th>
          <th>Logo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%# @agencies.each do |agency| %>
        <tr>
          <td><%= @agency.name %></td>
          <td><%= @agency.cover_image %></td>
          <td><%= @agency.logo %></td>
          <td><%= link_to 'Show', @agency, class: "btn btn-success" %></td>
          <td><%= link_to 'Edit', edit_agency_path(@agency), class: "btn btn-secondary" %></td>
          <td><%= link_to 'Destroy', @agency, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
        <%# end %>
      </tbody>
    </table>
  </div>
  <br>
</div>
<%= link_to 'New Agency', new_agency_path, class: "btn btn-primary mt-3" %>


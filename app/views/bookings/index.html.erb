<div class="card mt-3">
  <div class="card-header">
    <h1>Bookings</h1>      
  </div>
  <div class="table-responsive">    
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Start</th>
          <th>End</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.starting_point %></td>
            <td><%= booking.end_point%></td>
            <td><%= link_to 'Show', booking, class: "btn btn-success" %></td>
            <td><%= link_to 'Edit', edit_booking_path(booking), class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
</div>
<%= link_to 'New booking', new_booking_path, class: "btn btn-primary mt-3" %>


<div class="container">
  <% if notice.present? %>
    <div class="alert alert-success mt-5 alert-dismissible">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= notice %>
    </div>
  <% end %>
  <div class="card mt-4">
    <div class="card-body">
      <div>
        <strong>Start:</strong>
        <%= @booking.starting_point %>
      </div>

      <div>
        <strong>End:</strong><br>
        <%= @booking.end_point %>
      </div>

      <div class="mt-2">
        <%= link_to 'New Booking', new_booking_path(@booking), class: "btn btn-info btn-sm" %> 
        <%= link_to 'Edit', edit_booking_path(@booking), class: "btn btn-primary btn-sm" %>             
      </div>
    </div>
  </div>
</div>

